{
  "name": "generator-vizzuality-projects",
  "version": "1.0.0",
  "description": "A project generator for Vizzuality",
  "homepage": "https://github.com/Vizzuality/generator-vizzuality-projects#readme",
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com",
    "url": "http://vizzuality.com"
  },
  "files": [
    "generators/app",
    "generators/express",
    "generators/rails",
    "generators/common"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "dependencies": {
    "lodash": "^4.13.1",
    "yeoman-generator": "^0.23.4"
  },
  "devDependencies": {
    "xo": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/generator-vizzuality-projects.git"
  },
  "scripts": {
    "test": "./node_modules/.bin/xo"
  },
  "license": "MIT",
  "xo": {
    "esnext": true,
    "space": 2,
    "ignores": ["generators/express/**", "generators/rails/**"],
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never"
        }
      ]
    }
  }
}
